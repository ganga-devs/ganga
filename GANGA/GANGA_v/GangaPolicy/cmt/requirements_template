cmtpath_pattern \
   macro <project>_so_pyqt "" \
         GANGA_without_installarea "<path>" \
         <project>_without_installarea "" \
         <project>_with_installarea&Unix "<path>/$(<project>_installarea_prefix)/python/external/pyqt/$(pyqt)/$(CMTCONFIG)/lib"\
         <project>_with_installarea&WIN32 "<path>\$(<project>_installarea_prefix)\python\external\pyqt\$(pyqt)\$(CMTCONFIG)\lib" ; \
    path_remove  LD_LIBRARY_PATH ${GANGA_so_pyqt} ; \
    path_prepend LD_LIBRARY_PATH ${GANGA_so_pyqt}

