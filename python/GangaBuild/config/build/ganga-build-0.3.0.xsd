<xsd:schema elementFormDefault="qualified"
    targetNamespace="http://ganga.cern.ch/build/1"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:dbuild="http://ganga.cern.ch/build/1">

    <xsd:element name="gangaBuild">
        <xsd:complexType>
            <xsd:choice>
                <xsd:group ref="dbuild:moduleBuild"/>
                <xsd:element name="externals" type="dbuild:externals"/>
            </xsd:choice>
        </xsd:complexType>
    </xsd:element>

    <xsd:group name="moduleBuild">
        <xsd:sequence>
            <xsd:element name="config" type="dbuild:moduleConfig" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="modules" type="dbuild:moduleList" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:group>
    
    <xsd:complexType name="moduleConfig">
        <xsd:sequence>
            <xsd:element name="build-name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="build-email" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="build-contact" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="build-svnroot" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="build-module" type="xsd:string" minOccurs="1" maxOccurs="1"/>                                                        
            <xsd:element name="svnroot" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="svnprefix" type="xsd:string" minOccurs="1" maxOccurs="1"/>            
            <xsd:element name="release" type="xsd:string" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="moduleList">
        <xsd:sequence>
            <xsd:element name="module" type="dbuild:module" minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="module">
        <xsd:attribute name="name" type="xsd:string"/>
        <xsd:attribute name="depends" type="xsd:string"/>
        <xsd:attribute name="tag" type="xsd:string" use="optional"/>
        <xsd:attribute name="version" type="xsd:string" use="optional"/>
    </xsd:complexType>

    <xsd:complexType name="externals">
        <xsd:sequence>
            <xsd:element name="component" minOccurs="1" maxOccurs="unbounded">
                <xsd:complexType>
                    <xsd:sequence>
                        <xsd:element name="release" minOccurs="1" maxOccurs="unbounded">
                            <xsd:complexType>
                                <xsd:sequence>
                                    <xsd:element name="env-var" minOccurs="0" maxOccurs="unbounded">
                                        <xsd:complexType>
                                            <xsd:attribute name="name" type="xsd:string"/>
                                            <xsd:attribute name="value" type="xsd:string"/>
                                        </xsd:complexType>
                                    </xsd:element>
                            	</xsd:sequence>
                                <xsd:attribute name="version" type="xsd:string"/>
                                <xsd:attribute name="uri" type="xsd:anyURI"/>
                                <xsd:attribute name="uriType" type="xsd:string" use="optional"/>
                            </xsd:complexType>
                        </xsd:element>
                    </xsd:sequence>
                    <xsd:attribute name="name" type="xsd:string"/>
                    <xsd:attribute name="homepage" type="xsd:anyURI"/>
                </xsd:complexType>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>
