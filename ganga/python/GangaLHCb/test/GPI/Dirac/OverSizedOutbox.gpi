from GangaTest.Framework.utils import sleep_until_completed, write_file, file_contains
from os import mkdir
from os.path import join,basename
import tempfile

# Job with a script
scriptname=tempfile.mktemp()
write_file(scriptname,"""#!/bin/env python
from random import choice
import string
f=open('output.txt','w')
f.write('This is a test\\n')
chars = string.letters + string.digits
mbyte=1024*1024
text=''.join([choice(chars) for i in range(20*mbyte)])
f.write(text)
f.close()
""")
jscript=Job(name='OverSizedOutbox',application=Executable(),backend=Dirac(CPUTime=300))
jscript.application.exe=File(scriptname)
jscript.application.args=[]
jscript.outputsandbox=['output.txt']
assert(jscript.submit())

assert(sleep_until_completed(jscript,1800))

assert(file_contains(join(jscript.outputdir,'output.txt'),'This is a test'))
