from Ganga.Utility.tempfile_compatibility import *
from GangaLHCb.test import *
from os.path import join,basename

j = Job ( application = DaVinci(), backend = Dirac())
j.application.platform=config['DIRAC']['AllowedPlatforms'][0]
tmpdir = mkdtemp()

fname = 'test'
f = open(join(tmpdir,fname),'w')

f.write('Hello World\n')
f.close()

j.inputsandbox=[join(tmpdir,fname)]
j.submit()

assert(checkFileInSandbox(j,basename(fname)))
j.kill()
