
from GangaTest.Framework.utils import sleep_until_completed, sleep_until_state

j = Job()
j.backend = TestSubmitter(fail='resubmit')

j.submit()
assert sleep_until_completed(j),"Job is not completed"

j.resubmit()
assert sleep_until_state(j,10,'completed',['submitted']),"Job is not completed after fail during resubmit"

j._impl.updateStatus('failed')
assert sleep_until_state(j,10,'failed'), "Job is not failed"

j.resubmit()
assert sleep_until_state(j,10,'failed',['submitted']), "Job is not failed after fail during resubmit"
