import os
pwd = os.path.abspath('.')
name = 'test.txt'
full_name = pwd + '/' + name
#
# pfn's
#
pfn = LocalFile(name)
assert pfn.namePattern == full_name
pfn = PhysicalFile('pfn:'+name)
assert pfn.namePattern == full_name
pfn = PhysicalFile('PFN:'+name)
assert pfn.namePattern == full_name
try:
    pfn = LocalFile('lfn:'+name)
    raise 'Should have got exception trying to create PhysicalFile from lfn.'
except:
    pass
#
# lfn's
#
lfn = DiracFile(lfn=name)
assert lfn.lfn == name
lfn = DiracFile('lfn:'+name)
assert lfn.lfn == name
lfn = DiracFile('LFN:'+name)
assert lfn.lfn == name
try:
    lfn = DiracFile('pfn:'+name)
    raise 'Should have got exception trying to create LogicalFile from pfn.'
except:
    pass
#
# methods
#
lfn = DiracFile(lfn='/lhcb/data/2010/DIMUON.DST/00008395/0000/00008395_00000326_1.dimuon.dst')
assert lfn.getReplicas()
assert lfn.getMetadata()
